<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2D2D2D"> <!-- Fondo gris oscuro -->

    <!-- LinearLayout para organizar Toolbar con título y flecha -->
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#2D2D2D"
        android:orientation="horizontal"
        android:gravity="start|center_vertical">

    <!-- Botón de flecha hacia atrás -->
        <!-- Ajusta la imagen manteniendo las proporciones -->

    <!-- Título "Reglas del Juego" -->

        <ImageButton
            android:id="@+id/iv_back_arrow"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Atrás"
            android:scaleType="centerCrop"
            android:src="@drawable/flecha_izquierda" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reglas del Juego"
        android:textColor="#FF5722"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_gravity="center" />
</LinearLayout>

    <!-- Título: ¿Cómo se juega? -->
<TextView
android:id="@+id/tv_how_to_play_title"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginTop="16dp"
android:layout_marginHorizontal="16dp"
android:text="¿Cómo se juega?"
android:textColor="@android:color/white"
android:textStyle="bold"
android:textSize="18sp"
app:layout_constraintTop_toBottomOf="@id/toolbar"
app:layout_constraintStart_toStartOf="parent" />

    <!-- Descripción: ¿Cómo se juega? -->
<TextView
android:id="@+id/tv_how_to_play_description"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_marginHorizontal="16dp"
android:layout_marginTop="8dp"
android:text="Los jugadores forman un círculo y en el centro colocan el dispositivo móvil, luego tocan el botón parpadeante para girar la botella. El jugador que señale la botella debe cumplir el reto que lanza la app, de lo contrario abandona el juego."
android:textColor="@android:color/white"
android:textSize="14sp"
app:layout_constraintTop_toBottomOf="@id/tv_how_to_play_title"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent" />

    <!-- Título: ¿Quién gana? -->
<TextView
android:id="@+id/tv_who_wins_title"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginTop="16dp"
android:layout_marginHorizontal="16dp"
android:text="¿Quién gana?"
android:textColor="@android:color/white"
android:textStyle="bold"
android:textSize="18sp"
app:layout_constraintTop_toBottomOf="@id/tv_how_to_play_description"
app:layout_constraintStart_toStartOf="parent" />

    <!-- Descripción: ¿Quién gana? -->
<TextView
android:id="@+id/tv_who_wins_description"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_marginHorizontal="16dp"
android:layout_marginTop="8dp"
android:text="Gana el último jugador que no abandone el juego."
android:textColor="@android:color/white"
android:textSize="14sp"
app:layout_constraintTop_toBottomOf="@id/tv_who_wins_title"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent" />

    <!-- Animación del jugador triunfando -->
<ImageView
android:id="@+id/iv_animation"
android:layout_width="200dp"
android:layout_height="200dp"
android:layout_marginTop="24dp"
android:contentDescription="Animación de triunfo"
android:src="@drawable/trophy_image"
    app:layout_constraintTop_toBottomOf="@id/tv_who_wins_description"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


