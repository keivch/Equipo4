<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:background="@drawable/rounded_toolbar"
    android:padding="8dp"
    android:gravity="center"
    android:elevation="8dp">

    <!-- Ícono de estrella -->
    <ImageView
        android:id="@+id/icon_star"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_star"
        android:tint="@color/orange"
        android:layout_margin="8dp"/>

    <!-- Ícono para el audio -->
    <ImageView
        android:id="@+id/icon_audio"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_audio_on"

        android:tint="@color/orange"
        android:layout_margin="8dp"/>

    <!-- Ícono de retos -->
    <ImageView
        android:id="@+id/icon_challenges"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_challenge"
        android:layout_margin="8dp"/>

    <!-- Ícono para agregar retos -->
    <ImageView
        android:id="@+id/icon_instructions"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_instruccions"
        android:layout_margin="8dp"/>

    <!-- Ícono para compartir la app -->
    <ImageView
        android:id="@+id/icon_share"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_share"

        android:tint="@color/orange"
        android:layout_margin="8dp"/>
</LinearLayout>

